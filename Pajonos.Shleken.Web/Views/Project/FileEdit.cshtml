@model Pajonos.Shleken.Services.Models.FilesViewModel

@{
    ViewBag.Title = "Edit Files";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}



<div class="container-fluid">
    @using (Html.BeginForm("Filesave", "projects", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.projectsId)


            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", type = "Files" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button type="button" class="btn btn-default" data-popup-close>Cancel</button>
                </div>
            </div>
        </div>
    }
</div>

