<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><a href="~/1/statistics"><i class="fa fa-sign-out" aria-hidden="true"></i> Outcomes</a></h3>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Desination</th>
                        <th>Description</th>
                        <th>Approver</th>
                        <th>Date</th>
                        <th>Cost</th>
                        <th style="width:60px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Outcomes)
                    {
                        <tr>
                            <td><a href="#"><img src="~/images/r.JPG" class="Users" />@item.Desination</a></td>
                            <td> @item.Description</td>
                            <td>
                                <a>@item.ApproverName</a>
                            </td>
                            <td> @item.Date</td>
                            <td>
                                @(item.Cost + "$")
                            </td>
                            <td>
                                <a href="~/project/@(ViewBag.ProjectId)/Outcomes/@(item.Id)/delete" class="pull-right delete-item"><i class="glyphicon glyphicon-trash fa-fw" aria-hidden="true"></i></a>
                                <a href="~/project/@item.ProjectId/Outcomes/@item.Id" class="pull-left" title="Edit Incomes" data-popup><i class="glyphicon glyphicon-pencil fa-fw" aria-hidden="true"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="success strong">
                        <td colspan="4">Total</td>
                        <td>@(Model.OutcomesTotal + "$")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><a href="~/1/statistics"><i class="fa fa-sign-in" aria-hidden="true"></i> Incomes</a></h3>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Source</th>
                        <th>Description</th>
                        <th>Approver</th>
                        <th>Date</th>
                        <th>Cost</th>
                        <th style="width:60px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Incomes)
                    {
                        <tr>
                            <td>@item.Source</td>
                            <td>@item.Description</td>
                            <td>
                                <a>@item.ApproverName</a>
                            </td>
                            <td>@item.Date</td>
                            <td>
                                @(item.Cost + "$")
                               
                                </td>
                            <td>
                                <a href="~/project/@(ViewBag.ProjectId)/Incomes/@(item.Id)/delete" class="pull-right delete-item"><i class="glyphicon glyphicon-trash fa-fw" aria-hidden="true"></i></a>
                                <a href="~/project/@item.ProjectId/Incomes/@item.Id" class="pull-left" title="Edit Incomes" data-popup><i class="glyphicon glyphicon-pencil fa-fw" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="success strong">
                        <td colspan="4">Total</td>
                        <td>@(Model.IncomesTotal + "$")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

