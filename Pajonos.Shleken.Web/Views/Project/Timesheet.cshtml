@model List<>
@using Pajonos.Shleken.Services
@using Pajonos.Shleken.Services.Models

@{
    ViewData["Title"] = "Timesheet";
}

@section Title {
    <h2><a href="@Url.Action("Index","Project",new {Projects=(@ViewBag.ProjectId)})">@ViewBag.ProjectsName.Name</a></h2> \
}

@section TitleRight {
    <strong>@DateTime.Now.AddDays(1 - DateTime.Now.Day).ToString("dd/MM/yyyy") - @DateTime.Now.ToString("dd/MM/yyyy")</strong>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <div class="btn-group" aria-label="Views" data-toggle="buttons">
        <label class="btn btn-default">
            <input type="radio" name="options" value="red" autocomplete="off" checked> Day
        </label>
        <label class="btn btn-default">
            <input type="radio" name="options" value="orange" autocomplete="off"> Week
        </label>
        <label class="btn btn-default active">
            <input type="radio" name="options" value="orange" autocomplete="off"> Month
        </label>
    </div>

    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownPeriod" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            @*Period*@ Current
            <span class="caret"></span>
        </button>

        <ul class="dropdown-menu " aria-labelledby="dropdownPeriod">
            <li><a href="#">Current</a></li>
            <li><a href="#">Last</a></li>
            <li Roles="separator" class="divider"></li>
            <li><a href="#">Custom</a></li>
        </ul>
    </div>

    <div class="btn-group" Roles="group" aria-label="Navigation">
        <button type="button" class="btn btn-default"><i class="fa fa-caret-left" aria-hidden="true"></i></button>
        <button type="button" class="btn btn-default"><i class="fa fa-caret-right" aria-hidden="true"></i></button>
    </div>

    <div class="btn-group" aria-label="Views" data-toggle="buttons">
        <label class="btn btn-default active">
            <input type="radio" name="view" value="list" autocomplete="off" checked><i class="fa fa-Tasks" aria-hidden="true"></i>
        </label>
        <label class="btn btn-default">
            <input type="radio" name="view" value="calendar" autocomplete="off"><i class="fa fa-Users" aria-hidden="true"></i>
        </label>
    </div>
}

