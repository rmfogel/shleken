
@model Pajonos.Shleken.Services.Models.RisksViewModel
@using Pajonos.Shleken.Services
@using Pajonos.Shleken.Services.Models

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
    ViewBag.Title = "Edit Risks";
}

<div class="container-fluid">
    @using (Html.BeginForm("RiskstSave", "Project", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()


        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ProjectId)


        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mitigations, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Mitigations, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mitigations, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(i => Model.UserId, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(i => Model.UserId, new SelectList(ViewBag.Users, "Id", "Name"), new { @class = "form-control" })
                <span class="help-block">Projects Owner</span>
                @Html.ValidationMessageFor(i => Model.UserId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(i => Model.Priority, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(i => Model.Priority, new SelectList(ViewBag.Priority, "Id", "Name"), new { @class = "form-control" })
                <span class="help-block">Set priority for better filtering</span>
                @Html.ValidationMessageFor(i => Model.Priority)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(i => Model.Probabilty, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(i => Model.Probabilty, new SelectList(ViewBag.Probability, "Id", "Name"), new { @class = "form-control" })
                <span class="help-block">Set Probability</span>
                @Html.ValidationMessageFor(i => Model.Probabilty)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(i => Model.Budget, new { type = "checkbox" })
                        <span class="help-block">Is this Risks can affect the budget</span>
                        @Html.ValidationMessageFor(i => Model.Budget)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(i => Model.Delivery, new { type = "checkbox" })
                        <span class="help-block">Is this Risks can affect the delivery</span>
                        @Html.ValidationMessageFor(i => Model.Delivery)
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(i => Model.Status, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(i => Model.Status, new SelectList(ViewBag.Status, "Id", "Name"), new { @class = "form-control" })
                <span class="help-block">Risks current status</span>
                @Html.ValidationMessageFor(i => Model.Status)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(i => Model.Cost, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <div class="input-group">
                    @Html.TextBoxFor(i => Model.Cost, new { @class = "form-control", placeholder = "Cost", type = "taxt" })
                    <span class="input-group-addon" id="dollarIncomes">%</span>
                    @Html.ValidationMessageFor(i => Model.Cost)
                </div>
            </div>
        </div>
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button type="button" class="btn btn-default" data-popup-close>Cancel</button>
            </div>
        </div>

    }
</div>
